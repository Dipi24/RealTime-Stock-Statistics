<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<variables>

		<variable name="PREFERRED_COLOR_SCHEME" type="string" value="color_scheme_darkblue.xml"  />
		<variable name="FOOTER_POSITION" type="string" value="inside" /> 
	
		<variable type="style" name="TitleElement">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:12; default:0.045 * $chartWidth; max:36</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="h1">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:12; default:0.045 * $chartWidth; max:36</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="h2">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:10; default:0.0366 * $chartWidth; max:26</fontSize>
			<fontWeight>normal</fontWeight>
		</variable>
		<variable type="style" name="h3">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:9; default:0.0275 * $chartWidth; max:22</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="FooterElement">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:6; default:0.022 * $chartWidth; max:22</fontSize>
		</variable>
		<variable type="style" name="AxisLabel">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:8; default:0.025 * $chartWidth; max:24</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="LegendHeader">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:8; default:0.025 * $chartWidth; max:24</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="LegendTitle">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:8; default:0.025 * $chartWidth; max:24</fontSize>
			<fontWeight>normal</fontWeight>
		</variable>
		<variable type="style" name="LegendFooter">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:6; default:0.022 * $chartWidth; max:22</fontSize>
		</variable>
		<variable type="style" name="AxisTick">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:8; default:0.022 * $chartWidth; max:22</fontSize>
		</variable>
		<variable type="style" name="PieSliceLabel">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:8; default:0.025 * $chartWidth; max:24</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="PopupElement">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:8; default:0.025 * $chartWidth; max:24</fontSize>
			<fontWeight>bold</fontWeight>
		</variable>
		<variable type="style" name="a">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontWeight>normal</fontWeight>
			<color>rgba(50,100,200,1)</color>
		</variable>
		<variable type="style" name="em">
			<fontStyle>italic</fontStyle>
		</variable>
		<variable type="style" name="strong">
			<fontWeight>bold</fontWeight>
		</variable>	
		<variable type="style" name="small">
			<fontFamily>RotisSansSerifPro</fontFamily>
			<fontSize>min:6; default:0.02 * $chartWidth; max:16</fontSize>
			<fontWeight>normal</fontWeight>
		</variable>		
		
	</variables>
	
	<spawnList>
		<spawn source="com.arcadiacharts.context.linechart.PlotAreaElement" dest="linechart.plotareafill" />
	</spawnList>
	
	<chartOptions>
		<background>
			<style>style1</style>
			<imageUrl>$BACKGROUND_IMAGE</imageUrl>
			<innerPadding>0.0333 * $chartWidth</innerPadding>
			<innerPaddingBottom>0.0183 * $chartWidth</innerPaddingBottom>
			<surroundingWebsiteColor>rgba(255,255,255,1)</surroundingWebsiteColor>
			<borderStyle>bold</borderStyle>
			<borderColor>rgba(255,255,255,1)</borderColor>
			<borderRoundness>0</borderRoundness>
			<borderWidth>0.02 * $chartShorterSide</borderWidth>
			<glossyEffect>glossyEffect1</glossyEffect>
			<shadowSize>0.01 * $chartShorterSide</shadowSize>
		</background>
		
		<plotArea>
		</plotArea>
		
		<horizontalGridLine>
		</horizontalGridLine>
		
		<verticalGridLine>
		</verticalGridLine>
		
		<axis>
			<arrowType>none</arrowType>
			<arrowSize>0</arrowSize>
			<displayLastTick>true</displayLastTick>
  			<displayFirstTick>true</displayFirstTick>
			<size>0.01 * $chartWidth</size>
		</axis>
		
		
		<axisTick>
			<size>0</size>
			<paddingTopAxis>0.025*$chartShorterSide</paddingTopAxis>
			<paddingLeftAxis>0.025*$chartShorterSide</paddingLeftAxis>
			<paddingBottomAxis>0.025*$chartShorterSide</paddingBottomAxis>
			<paddingRightAxis>0.025*$chartShorterSide</paddingRightAxis>
		</axisTick>
		
		
		<valuePoint>
			<display>false</display>
		</valuePoint>
		
		<valueLine>
			<style>plain</style>
			<lineWidth>3</lineWidth>
			<shadowColor>rgba(0,0,0,0.1)</shadowColor>
		</valueLine>
		
		<valueBar>
			<style>plain</style>
		</valueBar>
		
		<valueSlice>
			<style>indent</style>
			<borderWidth>0.08 * $radius</borderWidth>
			<borderPadding>0.035 * $radius</borderPadding>
		</valueSlice>
		
		<legend>
			<background>
				<color>rgba(255,255,255,0.3)</color>
			</background>
			<padding>0.02 * $chartWidth</padding>
			<paddingHeader>0.0085 * $chartWidth</paddingHeader>
			<paddingFooter>0.0065 * $chartWidth</paddingFooter>
			<verticalAlignment>bottom</verticalAlignment>
			<axisPadding>0.0533 * $chartWidth</axisPadding>
		</legend>
		
		<popup>
			<style>style1</style>
			
		</popup>

		<legendSymbol>
			<type>square</type>
			<size>0.025 * $chartWidth</size>
			<shadowColor>rgba(0,0,0,0.4)</shadowColor>
		</legendSymbol>
		
		
		<legendSymbol chartType="pie">
			<type>circle</type>
		</legendSymbol>
		
		<title>
			<paddingTop>0</paddingTop>
			<paddingBottom>0.04 * $chartWidth</paddingBottom>
		</title>

		<footer>
			<paddingTop>0.025 * $chartWidth</paddingTop>
		</footer>

	</chartOptions>
	
	<renderInstructionList>		
	</renderInstructionList>
	
</theme>
